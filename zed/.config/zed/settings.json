// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },
  "context_servers": {
    "terraform-context-server": {
      "enabled": true,
      "settings": {},
    },
  },
  "calls": {
    "mute_on_join": true,
  },
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "ui_font_family": ".SystemUIFont",
  "buffer_line_height": "comfortable",
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Frappé",
    "dark": "Catppuccin Frappé",
  },
  "terminal": {
    "font_size": 13.0,
  },
  "base_keymap": "VSCode",
  "agent": {
    "enabled": false,
    "button": false,
    "model_parameters": [],
  },
  "buffer_font_family": "JetBrains Mono",
  "file_types": {
    "yaml": ["services"],
    "rust": ["*.rs"],
    "Ansible": [
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/playbooks/*.yaml",
      "**/playbooks/*.yml",
      "**playbook*.yaml",
      "**playbook*.yml",
    ],
  },
  "ui_font_size": 16.0,
  "buffer_font_size": 13.0,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark",
  },
}
